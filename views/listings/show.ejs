<% layout("/layouts/boilerplate") %>

<div class="container show-page mt-4">

  <!-- TITLE -->
  <h2 class="fw-bold mb-4"><%= listing.title %></h2>

  <div class="row">

    <!-- LEFT : IMAGE -->
    <div class="col-md-7 mb-4">
      <img 
        src="<%= listing.image.url %>" 
        class="show-img"
        alt="listing_image"
      >
    </div>

    <!-- RIGHT : DETAILS -->
    <div class="col-md-5">
      <div class="details-card">

        <p class="text-muted mb-1">
          Hosted by <b><%= listing.owner.username %></b>
        </p>

        <p class="mb-3"><%= listing.description %></p>

        <h4 class="price">
          ‚Çπ <%= listing.price.toLocaleString("en-IN") %> <span>/ night</span>
        </h4>

        <p class="location">
          üìç <%= listing.location %>, <%= listing.country %>
        </p>

        <% if (currUser && listing.owner._id.toString() !== currUser._id.toString()) { %>
          <a href="/listings/<%= listing._id %>/book" class="book-btn">
            Book Now
          </a>
        <% } %>

        <% if(currUser && listing.owner._id.equals(currUser._id))  { %>
          <div class="mt-3 text-center">
            <a href="/listings/<%= listing._id %>/edit" class="outline-red-btn me-3">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
              <button class="outline-red-btn me-3">Delete</button>
            </form>
          </div>
        <% } %>

      </div>

      <div class="offer-btn-wrapper">
        <% if (currUser && listing.owner._id.toString() !== currUser._id.toString()) { %>
          <form action="/listings/<%= listing._id %>/offer" method="GET">
            <button class="make-offer-btn ">
              Make an Offer
            </button>
          </form>
        <% } %>
      </div>

    </div>
  </div>

  <!-- REVIEWS -->
  <hr class="my-5">

<div class="container mb-5">
  <div class="row justify-content-center">

    <!-- REVIEW CARD -->
    <div class="col-md-8">
      <div class="review-box">

        <% if(currUser) { %>
          <h4 class="mb-4">Leave a Review</h4>

          <form 
            method="POST"
            action="/listings/<%= listing._id %>/reviews"
            class="needs-validation"
            novalidate
          >

            <!-- Rating -->
            <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

            <!-- Comment -->
            <div class="mb-4">
              <label class="form-label fw-semibold">Your Review</label>
              <textarea
                name="review[comment]"
                rows="4"
                class="form-control review-textarea"
                placeholder="Share your experience..."
                required
              ></textarea>
              <div class="invalid-feedback">
                Please submit some comments for review
              </div>
            </div>

            <button class="review-btn">
              Submit Review
            </button>
          </form>
        <% } %>

        <hr class="my-4">

        <h5 class="mb-3">All Reviews</h5>

        <div class="row">
          <% for(let review of listing.reviews) { %>
            <div class="col-md-6 mb-4">
              <div class="single-review">

                <div class="review-header">
                  <strong>@ <%= review.author.username %></strong>
                  <span class="starability-result" data-rating="<%= review.rating %>"></span>
                </div>

                <p class="review-comment"><%= review.comment %></p>

                <% if(currUser && review.author._id.equals(currUser._id)) { %>
                  <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-outline-dark">
                      Delete
                    </button>
                  </form>
                <% } %>

              </div>
            </div>
          <% } %>
        </div>

      </div>
    </div>

  </div>
</div>




</div>
